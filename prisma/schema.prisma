generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Fund {
  id                  Int     @id @default(autoincrement())
  name                String
  tokenValInception   Float
  btcPriceInception   Float
  inceptionDate       DateTime
  daysRunning         Int
  users               User[]
  reports             Report[]
}

model User {
  id              String       @id @default(cuid())
  email           String       @unique
  hash            String
  name            String
  usdInvested     Float
  tokens          Float
  tokenValEntrt   Float
  btcPriceEntry   Float
  fund            Fund         @relation(fields: [fundId], references: [id])
  fundId          Int
}

model Report {
  id           String        @id @default(cuid())
  path         String
  createdAt    DateTime   @default(now())
  fund         Fund       @relation(fields: [fundId], references: [id])
  fundId       Int
}